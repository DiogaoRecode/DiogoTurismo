<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DiogoTurismo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark mynav" style="background-color:black">
            <div class="container -fluid">
                <a class="navbar-brand mr-5" style="font-size:38px;" asp-area="" asp-controller="Home" asp-action="Index"><span style="color:yellow;">D</span>IOGO TURISMO</a>
                <button class="navbar-toggler border-white" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="color:white;"></span>
                </button>
                <div class="navbar-collapse  justify-content" id="navbarNav">
                    <ul class="navbar-nav mt-2 ml-4" style="font-size: 18px; text-align:left;">
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-controller="Cadastroes" asp-action="Index">Cadastro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-controller="Destinoes" asp-action="Index">Destino</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-controller="Passagems" asp-action="Index">Passagens</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-warning" asp-area="" asp-controller="Home" asp-action="Privacy">Contato</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

  

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   

       

    <footer class="border-top footer text-muted "  style="background-color:black;">
        <div class="container" style="text-align:center;">
            &copy; 2021 - Diogo Turismo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Contato</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
