@model DiogoTurismo.Models.Destino

@{
    ViewData["Title"] = "Details";
}


<style>
    .navbar{
        margin-bottom:0;
    }

    .extra-jumbotron{
        background-image:url('/Destino.jpg');
        background-size:100%;
    }


  .body{
      background-color:yellow;
  }
</style>


<div class="jumbotron extra-jumbotron">
      <h1 style="color:white"><span style="color:yellow"> D</span>ESTINO</h1>
       <h2 style="color:yellow;">DETALHES</h2>
  </div>

<div>
    <h4>Destino Registrado</h4>
    <hr />
    <dl class="row" style="background:black;color:yellow;">
        <dt class = "col-sm-2">
            @Html.DisplayName("Cidade Destino :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade_destino)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Cidade Origem :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade_origem)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id_destino">Editar</a> &nbsp
    <a class="btn btn-dark" asp-action="Index">Voltar no menu anterior</a>
</div>
