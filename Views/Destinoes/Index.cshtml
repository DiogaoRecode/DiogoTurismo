@model IEnumerable<DiogoTurismo.Models.Destino>

@{
    ViewData["Title"] = "Index";
}

<style>
    .navbar{
        margin-bottom:0;
    }

    .extra-jumbotron{
        background-image:url('/Destino.jpg');
        background-size:100%;
    }


  .body{
      background-color:yellow;
  }
</style>


<div class="jumbotron extra-jumbotron">
      <h1 style="color:white"><span style="color:yellow"> D</span>ESTINO</h1>
       <h4 style="color:white">MENU PARA FAZER ALTERAÇÕES NO CONTEÚDO DESTINO</h4>
  </div>

<p>
    <a class="btn btn-warning" asp-action="Create">Adicionar destino</a>
</p>
<table class="table table-hover" style="text-align:center;background:yellow;color:white;">
    <thead style="background:black;color:yellow;">
        <tr>
            <th>
                @Html.DisplayName("Cidade Destino")
            </th>
            <th>
                @Html.DisplayName("Cidade Origem")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade_destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade_origem)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id_destino">Editar</a> &nbsp
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id_destino">Detalhes</a> &nbsp
                <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.Id_destino">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
