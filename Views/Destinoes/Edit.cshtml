@model DiogoTurismo.Models.Destino

@{
    ViewData["Title"] = "Edit";
}

<style>
    .navbar{
        margin-bottom:0;
    }

    .extra-jumbotron{
        background-image:url('/Destino.jpg');
        background-size:100%;
    }


  .body{
      background-color:yellow;
  }
</style>


<div class="jumbotron extra-jumbotron">
      <h1 style="color:white"><span style="color:yellow"> D</span>ESTINO</h1>
       <h2 style="color:yellow;">EDITAR</h2>
  </div>

<hr />
<div class="row form-cadastro justify-content-center">
    <div class="col-md-4 align-self-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_destino" />
            <div class="form-group">
                <label asp-for="Cidade_destino" class="control-label">Cidade Destino</label>
                <input asp-for="Cidade_destino" class="form-control" />
                <span asp-validation-for="Cidade_destino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade_origem" class="control-label">Cidade Origem</label>
                <input asp-for="Cidade_origem" class="form-control" />
                <span asp-validation-for="Cidade_origem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Voltar ao menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
