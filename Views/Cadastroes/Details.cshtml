@model DiogoTurismo.Models.Cadastro

@{
    ViewData["Title"] = "Details";
}

<style>
    .navbar{
        margin-bottom:0;
    }

    .extra-jumbotron{
        background-image:url('/Destino.jpg');
        background-size:100%;
    }


  .body{
      background-color:yellow;
  }
</style>


<div class="jumbotron extra-jumbotron">
      <h1 style="color:white"><span style="color:yellow"> C</span>ADASTRO</h1>
       <h2 style="color:yellow;">DETALHES</h2>
  </div>
<div>
    <h4>CLIENTE CADASTRADO</h4>
    <hr />
    <dl class="row" style="background:black;color:yellow;">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nome :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("CPF :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
         @Html.DisplayName("Email :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Telefone :")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id_cadastro">Editar</a> &nbsp
    <a class="btn btn-dark" asp-action="Index">Voltar ao menu</a>
</div>
