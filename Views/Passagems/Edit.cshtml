@model DiogoTurismo.Models.Passagem

@{
    ViewData["Title"] = "Edit";
}


<style>
    .navbar{
        margin-bottom:0;
    }

    .extra-jumbotron{
        background-image:url('/Destino.jpg');
        background-size:100%;
    }


  .body{
      background-color:yellow;
  }
</style>


<div class="jumbotron extra-jumbotron">
      <h1 style="color:white"><span style="color:yellow"> P</span>ASSAGENS</h1>
      <h2 style="color:yellow;">EDITAR</h2>
  </div>

<h3 class="text-center">Preencha os dados abaixo:</h3>
<hr />


<div class="row form-cadastro justify-content-center">
    <div class="col-md-4 align-self-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_passagem" />
            <div class="form-group">
                <label asp-for="Numero_passaporte" class="control-label">Nº Passaporte</label>
                <input asp-for="Numero_passaporte" class="form-control" />
                <span asp-validation-for="Numero_passaporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_saida" class="control-label">Data de saída</label>
                <input asp-for="Data_saida" class="form-control" />
                <span asp-validation-for="Data_saida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_chegada" class="control-label">Data de chegada</label>
                <input asp-for="Data_chegada" class="form-control" />
                <span asp-validation-for="Data_chegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario_saida" class="control-label">Horário de saída</label>
                <input asp-for="Horario_saida" class="form-control" />
                <span asp-validation-for="Horario_saida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario_chegada" class="control-label">Horário de chegada</label>
                <input asp-for="Horario_chegada" class="form-control" />
                <span asp-validation-for="Horario_chegada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadastroId_cadastro" class="control-label">Cliente Cadastrado</label>
                <select asp-for="CadastroId_cadastro" class="form-control" asp-items="ViewBag.CadastroId_cadastro"></select>
                <span asp-validation-for="CadastroId_cadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinoId_destino" class="control-label">Cidade de destino</label>
                <select asp-for="DestinoId_destino" class="form-control" asp-items="ViewBag.DestinoId_destino"></select>
                <span asp-validation-for="DestinoId_destino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark"  asp-action="Index">Voltar ao menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
